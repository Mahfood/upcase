<% if flash.any? %>
  <div class="flashes">
    <% user_facing_flashes.each do |key, value| -%>
      <div class="flash <%= key %>">
        <%= value %>
      </div>
    <% end -%>

  <% if flash[:purchase_amount] %>
     <% content_for :javascript do %>
       <%= render "conversions/purchased" %>
     <% end %>
   <% end %>
  </div>
<% end %>
