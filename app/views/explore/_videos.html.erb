<section class="tiles">
  <span class="divider">
    <h4 class="text">Videos</h4>
  </span>

  <ul>
    <% if show.latest_video.present? %>
      <%= render(
        "explore/latest_show_video",
        show: show,
        video: show.latest_video
      ) %>
    <% end %>

    <li class="tile video-tutorial <%= topic_class(trail.topic) %>">
      <h2>Video Tutorial</h2>
      <h1><%= link_to trail.name, trail %></h1>
      <p class="description"><%= trail.description %></p>
      <%= link_to "View All Trails", trails_path, class: "cta" %>
    </li>
  </ul>
</section>
