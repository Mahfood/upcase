<% @topics.each do |topic| %>
  body.resources-index.<%= topic.slug.parameterize %> .subject {
    background: <%= topic.color %>;
  }

  body.resources-index.<%= topic.slug.parameterize %> .topic-image {
    background: image-url('topics/<%= topic.slug %>.svg') no-repeat;
  }

  body.resources-index.<%= topic.slug.parameterize %> h1 {
    color: <%= topic.color_accent %>;
  }

  .tiles ul .tile.<%= topic.slug.parameterize %> {
    border-top-color: <%= topic.color %>;
  }

  .trail-titles li.<%= topic.slug.parameterize %> {
    border-color: <%= topic.color %>;
  }
<% end %>
