<span class="divider"><h4 class="text"><%= t(".review-queue") %></h4></span>

<% if @questions_to_review.present? %>
  <ul class="kept-flashcards">
    <% @questions_to_review.each do |question| %>
      <li class="to-flashcard">
        <%= link_to question.title, quiz_question_path(question.quiz, question) %>
        <p class="flashcard-about"><%= t("quiz-title-teaser", title: question.quiz_title) %></p>
        <%= button_to(
          "Remove",
          question_attempt_path(question, question.most_recent_attempt_for(current_user)),
          method: :put,
          params: { confidence: Attempt::HIGH_CONFIDENCE },
          form_class: "remove") %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><%= t(".blank-state-explanation", save_for_review_text:
           t("questions.hidden_answer.save-for-review")) %></p>
<% end %>
