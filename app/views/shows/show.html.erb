<% render "shared/content_specific_head_tags", content: @show, type: "show" %>

<% content_for :head do %>
  <%= auto_discovery_link_tag(:rss, show_url(@show, format: "rss")) %>
<% end %>

<% content_for :subject_block do %>
  <h1><%= @show.name %></h1>
  <h2 class="tagline">
    <%= @show.tagline %>
  </h2>
<% end %>

<div class="text-box-wrapper">
  <div class="text-box">

    <span class="divider">
      <h4 class="text">Videos</h4>
    </span>

    <div class="text-box">
      <% unless has_access_to_shows? %>
        <%= render "subscribe_cta",
          description: t("watchables.preview.subscribe_cta"),
          button_text: t("watchables.preview.subscribe_link") %>
        <%= render "clips/preview_only", clip: Clip.new("ol6e0miehm") %>
      <% end %>

      <section id="videos">
        <%= render @show.videos_with_status %>
      </section>
    </div>
  </div>
</div>
